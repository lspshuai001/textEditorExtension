{
  "name": "Editable Sidebar Extension",
  "version": "1.0",
  "manifest_version": 3,
  "author": "Q",
  "description": "A simple extension to open an editable sidebar.",
  "permissions": ["sidePanel", "tabs", "activeTab"],
  "side_panel": {
    "default_path": "editable_page.html",
    "matches": ["<all_urls>"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
        "24": "images/icons24.png",
        "48": "images/icons48.png",
        "96": "images/icons96.png"
    }
  }
}
